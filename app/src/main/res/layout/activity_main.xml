<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num_circles_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Número de círculos"
        android:inputType="number" />

    <Button
        android:id="@+id/draw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_circles_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Dibujar" />
    <Button
        android:id="@+id/edit_sets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/draw_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Editar Sets" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Guardar Diagrama"
        android:layout_margin="16dp"
        android:onClick="onSaveButtonClick" />

    <upvictoria.pm_ene_abr_2024.iti_271164.pe1u3.VennDiagramView
        android:id="@+id/venn_diagram_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/draw_button"
        android:layout_margin="16dp" />

</RelativeLayout>
